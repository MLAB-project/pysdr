<?xml version="1.0"?>
<block>
  <name>PySDR Waterfall</name>
  <key>pysdr_waterfall</key>
  <category>PySDR</category>
  <import>import pysdr.gnuradio_</import>
  <make>#set $parent = $notebook() and 'self.%s.GetPage(%s)'%$notebook() or 'self'
pysdr.gnuradio_.waterfall(
  $(parent).GetWin(),
  $cmd_args
)
#if not $grid_pos()
$(parent).Add(self.$(id).win)
#else
$(parent).GridAdd(self.$(id).win, $(', '.join(map(str, $grid_pos()))))
#end if</make>

  <param>
    <name>Command-line arguments</name>
    <key>cmd_args</key>
    <type>string</type>
  </param>
  <param>
    <name>Grid Position</name>
    <key>grid_pos</key>
    <value></value>
    <type>grid_pos</type>
  </param>
  <param>
    <name>Notebook</name>
    <key>notebook</key>
    <value></value>
    <type>notebook</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
</block>

